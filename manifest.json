{
  "name": "Jira Assistant",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "Helps to interact with JIRA task tracker",
  "icons": {
    "128": "images/jira.png"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "permissions": [
    "tabs",
    "clipboardWrite",
    "https://livejournal.atlassian.net/*"
  ],

  "content_scripts": [{
    "js": [
      "js/contentScript.js"
    ],
    "css": ["css/content.css"],
    "matches": ["https://livejournal.atlassian.net/*"]
  }],

  "web_accessible_resources": [
    "images/copy.png"
  ]
}
